{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"rootDir": "./src",
		"outDir": "./dist",
	},
	"include": [
		"./src/**/*"
	]
}
